<h1>Books</h1>

<% @books.each do |book| %>

<p>title</p>
<span>
  <%= link_to book.title, "/books/{#book.}" %>
</span>

<p>body</p>
<span><%= book.body %></span>

<% end %>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <p>title</p>
  <%= f.text_field :title %>

  <p>body</p>
  <%= f.text_area :body %>

  <%= f.submit 'create book' %>

<% end %>
